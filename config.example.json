{
  "version": "1.0",
  "organization_units": {
    "示例单位": {
      "template_path": "templates/example_template.xlsx",
      "header_row": 1,
      "start_row": 2,
      "field_mappings": {
        "姓名字段": {
          "source_column": "姓名",
          "target_column": "B",
          "transform": "none",
          "required": true
        },
        "卡号字段": {
          "source_column": "卡号",
          "target_column": "C",
          "transform": "card_number",
          "required": true
        },
        "金额字段": {
          "source_column": "金额",
          "target_column": "D",
          "transform": "amount_decimal",
          "required": true
        },
        "日期字段": {
          "source_column": "日期",
          "target_column": "E",
          "transform": "date_format",
          "required": true
        }
      },
      "fixed_values": {
        "F": "固定值示例",
        "G": "2024-01"
      },
      "auto_number": {
        "enabled": true,
        "column": "A",
        "start_from": 1
      },
      "bank_branch_mapping": {
        "enabled": true,
        "source_column": "开户银行",
        "target_column": "H"
      },
      "month_type_mapping": {
        "enabled": true,
        "target_column": "I",
        "month_format": "{month}月收入",
        "bonus_value": "年终奖",
        "compensation_value": "补偿金"
      },
      "template_selector": {
        "enabled": false,
        "default_bank": "中国农业银行",
        "special_template": "templates/special_template.xlsx",
        "bank_column": "开户银行"
      },
      "transformations": {
        "date": {
          "output_format": "YYYY-MM-DD"
        },
        "amount": {
          "decimal_places": 2,
          "rounding": "round"
        },
        "card_number": {
          "remove_formatting": true,
          "luhn_validation": true
        }
      },
      "validation_rules": {
        "required_fields": ["姓名", "卡号", "金额", "日期"],
        "data_types": {
          "金额": "numeric",
          "日期": "date"
        },
        "value_ranges": {
          "金额": {
            "min": 0,
            "max": 999999.99
          }
        }
      }
    }
  }
}
